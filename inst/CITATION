
citHeader("To cite the EpiLPS package in publications use:")

bibentry(
  bibtype = "Manual",
  title = "EpiLPS: a fast and flexible Bayesian tool for estimating epidemiological parameters. [Computer Software]",
  author       = c("Oswaldo Gressani"),
  year         = "2021",
  url          = "https://github.com/oswaldogressani/EpiLPS",

  textVersion  =
  paste("(Starting from version 1.2.0) Gressani, O. (2021).",
        "EpiLPS: a fast and flexible Bayesian tool for estimating epidemiological          parameters. [Computer Software].",
    "https://epilps.com/.")
)


bibentry(
  bibtype = "Manual",
  title        = "EpiLPS: a fast and flexible Bayesian tool for estimation
  of the time-varying reproduction number. [Computer Software]",
  author       = c("Oswaldo Gressani"),
  year         = "2021",
  url          = "https://epilps.com/",

  textVersion  =
  paste("(Before version 1.2.0) Gressani, O. (2021).",
        "EpiLPS: a fast and flexible Bayesian tool for estimation
  of the time-varying reproduction number. [Computer Software].",
    "https://epilps.com/.")
)

